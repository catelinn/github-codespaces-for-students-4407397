{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "updateContentCommand": "npm install",
    "postAttachCommand": "npm start",
    "remoteUser": "node",

    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [3000],
    "portsAttributes": {
        "3000": {
            // Use 'label' to provide a friendly name for the port that will appear in the Remote Explorer.
            "label": "React App",
            // Use 'onAutoForward' to automatically open a preview of the port when the container attaches.
            "onAutoForward": "openPreview"
        }
    },

    "customizations": {
        // use 'customizations' to configure vscode in the container, e.g., extensions, settings, etc.
        "vscode": {
            // add the ESLint and Prettier extensions
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ],
            // Use 'settings' to set *default* values for settings.json in the container.
            "settings": {
                // set the default formatter to Prettier on save
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "editor.formatOnSave": true
            }
        }
    }
}